<h1> <%= action_name %> </h1>

<% if @driver.errors.any? %>
  <h4>Error Message(s):</h4>
  <ul>
    <% @driver.errors.each do |column, message| %>
      <li>
        <strong><%= "#{column.capitalize}: " %></strong> <%= message.capitalize %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @driver do |f|%>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br />
  <%= f.label :vin %>
  <%= f.text_field :vin %>
  <br />
  <%= f.submit button_title%>
<% end %>
