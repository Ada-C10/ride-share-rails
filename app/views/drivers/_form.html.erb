
<% if @driver.errors.any? %>
  <ul class="errors">
    <% @driver.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

<h1> <%= action_name %> </h1>
<%# form_with url: "/books", method: :post, class: "book-form" do |f|%>

<%= form_with model: @driver, class: "driver-form" do |f|%>
  <p>Please provide the following information to save your driver to our database:</p>
  <%= f.label :name %>
  <%= f.text_field :name%>
  <%= f.label :vin %>
  <%= f.text_field :vin %>
  <%= f.submit button_title, class: "driver-button" %>
<% end %>
