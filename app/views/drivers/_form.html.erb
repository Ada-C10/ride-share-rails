<h1> <%=action_name %> </h1>

<%= form_with model: @driver do |f| %>
  <p>Modify the fields below:</p>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :vin %>
  <%= f.text_field :vin %>

  <%= f.label :phone_num %>
  <%= f.text_field :phone_num %>

  <%= f.label :image_url %>
  <%= f.text_field :image_url %>

  <%= f.submit action_name, class: button_title %>
<% end %>
