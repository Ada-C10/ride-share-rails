<section class="form_partial">
  <section class="section header">
    <h1><%= action_name %></h1>
  </section>
  <section class="section fill_out">
    <%= form_with model: @driver do |f| %>
      <%= f.label :name %>
      <br />
      <%= f.text_field :name %>
      <br /><br />
      <%= f.label :vin %>
      <br />
      <%= f.text_field :vin %>
      <br /><br />
      <%= f.submit button_title %>
    <% end %>
  </section>
  <section class="section errors">
    <% if @driver.errors.any? %>
      <h4 class="show_red">Error Message(s):</h4>
      <ul>
        <% @driver.errors.each do |column, message| %>
          <li>
            <strong><%= "#{column.capitalize}: " %></strong> <%= message.capitalize %>
          </li>
        <% end %>
      </ul>
    <% end %>
  </section>
</section>
