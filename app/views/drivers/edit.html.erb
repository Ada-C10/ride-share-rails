<div class="edit-container">
  <%= form_with model: @driver, class: 'edit-form' do |f| %>

  <p>Please edit the information for the selected driver here:</p>

  <h2>Edit Driver Form</h2>

  <%= f.label :name %>
  <%= f.text_field :name, class: "add-driver" %>

  <%= f.label :vin %>
  <%= f.text_field :vin, class: "driver-vin" %>

  <%= f.submit "Save Driver", class: "driver-button" %>
  <% end %>
</div>
