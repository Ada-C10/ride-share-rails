<h1>Editing Driver</h1>

<%= form_with model: @driver do |f| %>

  <section class="form-action">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </section>

  <section class="form-description">
    <%= f.label :vin %>
    <%= f.text_field :vin %>
  </section>

<%= f.submit action_name, class: "driver-button" %>

<% end %>


<% if @driver.errors.any? %>
  <ul class="errors">
    <% @driver.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>
