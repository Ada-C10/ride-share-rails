<h1 class= "title"> Rideshare Driver List
</h1>

<nav class="nav">
  <li><%= link_to "HOME", root_path %></li>
  <li><%= link_to "DRIVER", drivers_path %></li>
  <li><%= link_to "PASSENGER", passengers_path %></li>
</nav>

<%= button_to "Become a Driver", new_driver_path, method: :get %>
</div>

<div class="container">
<h1 Your Tasks</h1>
<ul>
  <% @drivers.each do |driver| %>

    <li class="driver">
      <%= link_to driver.id, driver_path(driver.id) %>
      <%= driver.name %>
      <%= driver.vin %>
      <%= link_to "edit", edit_driver_path(driver.id) %>
      <%= link_to "delete", driver_path(driver.id), method: :delete, data: {confirm: "Please confirm you would like to be deleted as a driver"} %>
    </li>
  </ul>
<% end %>
