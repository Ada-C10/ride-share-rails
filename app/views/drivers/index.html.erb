<header>
  <h1>Driver List</h1>
</header>

<aside>
  <%= button_to "Add driver", new_driver_path, method: :get %>
</aside>

<section>
  <aside>
    <%= will_paginate @tasks %>
  </aside>
  <table class="list-of-data">
    <tr class="table-header details">
      <td>Name</td>
      <td></td>
      <td></td>
    </tr>
    <% @drivers.each do |driver| %>
      <tr class="details">
        <td><%= link_to "#{driver.name}", driver_path(driver.id) %></td>
        <td><%= link_to "Edit", edit_driver_path(driver.id) %></td>
        <td><%= link_to "Delete", driver_path(driver.id), method: :delete,  data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </table>
</section>
