<h2>Rideshare Drivers</h2>

<table>
<% @drivers.each do |driver| %>
<tr>
  <td><%= link_to driver.name, driver_path(driver)  %></td>
  <td><%= link_to "Edit", edit_driver_path(driver)  %></td>
  <td><%= link_to "Delete", driver_path(driver), method: :delete, data: { confirm: "Are you sure you want to delete driver: #{driver.name}?" } %></td>
</tr>
<% end %>
</table>
