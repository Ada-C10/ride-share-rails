<h1>Drivers</h1>
<table>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Vin Number</th>
  </tr>
    <% @drivers.each do |driver| %>
      <tr>
        <td>
          <%= link_to "#{driver.id}", driver_path(driver.id) %>
        </td>
        <td>
          <%= "#{driver.name}" %>
        </td>
        <td>
          <%= "#{driver.vin}"  %>
        </td>
      </tr>
    <% end %>
</table>
