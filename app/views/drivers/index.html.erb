<div class="wrapper list-pages">

  <h1 class ="index-header">All Drivers</h1>

  <div class="table list-pages">

    <div class="row header">
      <div class="cell">Driver ID</div>
      <div class="cell">Name</div>
      <div class="cell">Rating</div>
      <div class="cell">Status</div>
      <div class="cell"></div>
      <div class="cell"></div>
    </div>

<% @drivers.each do |driver| %>
    <div class="row">
      <div class="cell" data-title="ID">
        <%= "#{driver.id}" %>
      </div>
      <div class="cell" data-title="Name">
        <%= link_to "#{driver.name}", driver_path(driver.id) %>
      </div>
      <div class="cell" data-title="Rating">
        <%= "#{driver.average_rating}"%>
      </div>
      <div class="cell" data-title="Status">
        <% if driver.is_available? == true %>
          <span class="dot_available"></span>
        <% else %>
          <span class="dot_unavailable"></span>
        <%end%>
      </div>
      <div class="cell" data-title="Edit">
        <%= link_to "Edit", edit_driver_path(driver.id)%>
      </div>
      <div class="cell" data-title="Delete">
        <%= link_to "Delete", driver_path(driver.id), method: :delete, data: {confirm: 'Are you sure you want to delete this driver?'} %>
      </div>
    </div>
<%end%>


  </div>


</div>
