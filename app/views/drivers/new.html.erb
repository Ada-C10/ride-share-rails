<section id="title">
  <h1>New Driver</h1>
  <sub>Changing The Way People Travel</sub>
</section>

<nav class="nav">
  <li><%= link_to "HOME", root_path %></li>
  <li><%= link_to "DRIVER", drivers_path %></li>
  <li><%= link_to "PASSENGER", passengers_path %></li>
</nav>

<%= form_with model: @driver, class: "driver-form" do |f|%>
  <p>Please provide the following information to become a driver on RideShare!</p>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :vin %>
  <%= f.text_field :vin %>

  <%# f.hidden :creator, value: 'Divya' %>

  <%= f.submit "Sumbit!", class: "driver-button" %>
<% end %>
