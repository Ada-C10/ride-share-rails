<% if @driver.errors.messages.any? %>
  <ul>
     <% @driver.errors.messages.each do |field, problem_list| %>
       <% problem_list.each do |problem| %>
         <li>
           <%= field %>
           <%= problem %>
         </li>
       <% end %>
     <% end %>
   </ul>
<% end %>

<%= render partial: "driver", locals:
{
  action_title: "Add a New Driver",
  action_submit: "Create",
} %>
