<h1><%= @driver.name %></h1>
<%= link_to "Edit", edit_driver_path(@driver.id) %>
<br />
<%= link_to "Delete", driver_path(@driver.id), method: :delete, data: {confirm: "Are you sure?"} %>
<br />
<br />

<strong>ID: <%= @driver.id %></strong>
<br />
<strong>VIN: <%= @driver.vin %></strong>
<br />
<strong>Total Earnings: $<%= '%.2f' % @driver.total_earnings %></strong>
<br />
<strong>Average Rating: <%= @driver.average_rating %></strong>
<br />
<br />
<strong>List of Trips:</strong>
<% @driver.trips.each do |trip| %>
<ul>
  <li>
    <%= "Date: #{trip.date}, Passenger ID: #{trip.passenger_id}, Driver ID: #{trip.driver_id}" %>
  </li>
</ul>
<% end %>
