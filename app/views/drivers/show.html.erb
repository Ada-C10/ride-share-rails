<div class="wrapper detail-pages">

  <h1 class ="index-header">Driver Detail</h1>

<h1 class="user-name"><%= @driver.name %></h1>
 <% if @driver.is_available? == true %>
  <span class="dot_available"></span>
<% else %>
  <span class="dot_unavailable"></span>
<%end%>
<h3>Total Earnings : $<%= @driver.total_earnings %></h3>
<h3 class="detail-before-buttons">Average Ratings : <%= @driver.average_rating %></h3>

<%= link_to "Edit", edit_driver_path(@driver.id), class: "edit-delete-links" %>
<%= link_to "Delete", driver_path(@driver.id), method: :delete, data: {confirm: 'Are you sure you want to delete this driver?'}, class: "edit-delete-links" %>


<%= render partial: "layouts/personaltrips",
locals: {all_trips: @driver.trips,
        } %>

</div>
