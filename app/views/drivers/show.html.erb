<% if @driver.nil? %>
  <h1><%= "404: NOT FOUND" %></h1>
<% else %>
<h1> <%= @driver.name %></h1>
<ul>
  <li>VIN: <%= @driver[:vin] %></li>
  <li> Total Earned: $<%= @driver.total_earned%></li>
  <li> Average Rating: <%= @driver.average_rating%></li>
  </ul>
  <section>
    Trips: <% @driver.trips.each do |trip|%>
    <ul>
      <li><%= link_to "Trip #{trip.id}", trip_path(trip.id)%>
      <li> Trip Date: <%= trip.date%></li>
      <li> Passenger: <%= trip.passenger.name%></li>
      <li> Cost: <%= trip.cost/100%></li>
      <li> Rating:<%= trip.rating%></li>
    </ul>
    <%end%>
  </section>




<ul>
<li><%= link_to "Edit", edit_driver_path(@driver.id)%></li>
<li><%= link_to "Delete", driver_path(@driver.id), method: :delete, data: {confirm:"Are you sure you want to delete?"} %></li>
</ul>
<% end %>
