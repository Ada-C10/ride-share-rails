<% if @driver.nil? %>
  <h1> 404 Not found</h1>
<% else %>

  <h1><%= @driver.name %></h1>
  <h3> Driver Name : <%= @driver.name %></h3>
  <h3> Driver Vin : <%= @driver.vin %></h3>
  <h3> Driver Picture : <%= @driver.driver_picture %></h3>

  <h3>Total Earned: <%= (@driver.total_earnings / 100).round(2) %></h3>
  <h3>Average Rating: <%= @driver.average_rating %></h3>


  <%= link_to "Edit #{@driver.name}", edit_driver_path(@driver.id)%>



  <p></p>

  <%= link_to "Delete #{@driver.name}", driver_path(@driver.id), method: :delete, data: { confirm: 'Are you sure you want to delete?'}%>


  <ul>
    <h2>Trips</h2>
    <% @driver.trips.each do |trip| %>
        <li><%= link_to "#{trip.id} #{trip.date} #{trip.cost} #{trip.rating} ", driver_trip_path(@driver.id) %>
        </li>
    <% end %>

  </ul>


<% end %>
