<h1> Here is info on a driver!</h1>

<% if @driver.nil? %>
  <h1> 404 Not found</h1>
<% else %>
  <h1><%=@driver.name %></h1>
  <h3> <%= @driver.vin %></h3>

  <%= link_to "Edit", edit_driver_path(@driver.id) %>
  <div></div>
  <%= link_to "Delete #{@driver.name}", driver_path(@driver.id), method: :delete, data: { confirm: 'Are you sure? This cannot be undone!'} %>
<% end %>
