<% if @driver.nil? %>
<h1> 404 Not found</h1>
<% else %>
<h3>Driver: <%=@driver[:name]%></h3>
<h3>Status: <%=@driver[:status]%></h3>
<h3>Total Earnings: <%="$#{@driver.total_earnings}"%></h3>

<h3>Average Rating: <%= @driver.average_rating %> </h3>

<% if @driver.trips.length == 0  %>
<h3>Trips: None</h3>
<% else %>
<h3>Trips: </h3>
<table>
  <th>View Trip</th>
  <th>Trip ID</th>
  <th>Driver ID</th>
  <th>Passenger ID</th>
  <th>Date</th>
  <th>Rating</th>
  <th>Cost</th>

  <% @driver.trips.each do |trip| %>
  <tr>
    <td><%= link_to "Trip Details", trip_path(trip.id)%></td>
    <td><%=  trip.id %></td>
    <td><%=  trip.driver_id  %></td>
    <td><%=  trip.passenger_id %></td>
    <td><%=  trip.date %></td>
    <td><%=  trip.rating %></td>
    <td><%=  trip.currency %></td>
  </tr>
  <% end %>
</table>
<% end %>
<h3><%= link_to "Edit", edit_driver_path(@driver.id) %> </h3>
<h3><%= link_to "Delete", remove_driver_path(@driver.id), method: :patch, data: { confirm: "Please confirm that you want to delete this driver." } %></h3>



<% end %>
