<h2>Driver Details</h2>


<p>
  <strong>
    <p> Driver Name: <%= @driver.name %> </p>
    <p> Driver id: <%= @driver.id %></p>
    <p> Driver VIN: <%= @driver.vin %></p>
  </strong>

</p>
  <p>Average Rating: <%= (@driver.average_rating) %> </p>
  <p>Total Earnings: $<%= "%.2f" % ((@driver.total_earnings) / 100) %> </p>

<div class="links">

  <%= link_to "Delete Driver", @drivers, method: :delete, data: { confirm: "Are you sure that you want to delete ?" } %>

</div>

<div class="wrapper_index">
  <h2>YOUR TRIPS</h2>
  <ol>
    <% @driver.all_trips.each do |trip| %>
      <%=link_to trip.date, trip_path(trip.id)%>
    </div>
  </li>
  <% end %>
</ol>
