<% if @drivers.nil? %>
  <h1> 404 Not found</h1>
<% else %>
  <h1>Driver</h1>
  <% @drivers.each do |driver| %>
  <h1><%= @drivers.name %></h1>
  <h1><%= @drivers.vin %> </h1>
  <%= link_to "Edit", driver_path(@driver.id) %>
  <div></div>
  <%= link_to "Delete #{@driver.name}", driver_path(@driver.id), method: :delete %>
<% end %>
