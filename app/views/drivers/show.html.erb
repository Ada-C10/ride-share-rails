<h2>Driver Details</h2>

<table>
    <tr>
      <td>Name: <%= @driver.name %></td>
      <td>Photo</td>
    </tr>
    <tr>
      <td> Average Rating: <%= @driver.avg_rating %></td>
      <td> Driver Earnings: $<%= @driver.total_trip_earnings %></td>
    </tr>
</table>


<div class="show_actions">
  <%= link_to "Edit", edit_driver_path(@driver)  %> |
  <%= link_to "Delete", driver_path(@driver), method: :delete, data: { confirm: "Are you sure you want to delete driver: #{@driver.name}?" } %>
</div>


