<% if @driver.nil? %>
  <h1> 404 Not found</h1>
<% else %>
  <h1><%=@driver.name %></h1>
  <!--TODO Correct link to show, not working right now   -->
  <h3> by <%= link_to "#{@driver.name}", driver_path(@driver.id) %></h3>
  <p><%= @driver.vin %> </p>
  <%= link_to "Edit", edit_driver_path(@driver.id) %>
  <div></div>
  <!--TODO FIgure out how to delete drivers without impacting driver trips.   -->
  <!--  Maybe set driver id to null then delete? -->
  <%= link_to "Delete #{@driver.name}", driver_path(@driver.id), method: :delete %>

  <!-- Show driver trips here. Have driver_trips_path.  -->
  <h1>Driver Trips</h1>
  <% @driver.trips.each do |trip| %>
    <div class = "trip_container">
      <p>Trip ID: <%="#{trip.id}"%></p>
      <p>Passenger ID: <%="#{trip.passenger_id}"%></p>
      <p>Date: <%="#{trip.date}"%></p>
      <p>Rating: <%="#{trip.rating}"%></p>
      <p>Cost: <%="#{trip.cost}"%></p>
    </div>
    <% end %>
<% end %>
