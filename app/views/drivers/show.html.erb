<h1> Here is info on a driver!</h1>

<% if @driver.nil? %>
  <h1> 404 Not found</h1>
<% elsif @driver.status == false %>
    <h1> <%= "Driver no. #{@driver.id} is no longer active" %>
<% else %>
  <h1> <%=@driver.name %></h1>
  <h3> <%= @driver.vin %></h3>
  <h4> <%= "#{@driver.name}'s raiting is #{@driver.ratings}" %> </h4>
  <h4> <%= "#{@driver.name} has made a total of $ #{@driver.earnings}" %> </h4>

  <% @driver.trips.each do |trip| %>
  <ul>
    <li> <%= link_to "#{trip.id}", trip_path(trip.id)%></li>
    <li> <%= trip.date %></li>
    <li> <%= link_to "#{trip.passenger.name}", passenger_path(trip.passenger.id)%></li>
    <li> <%= trip.cost %> </li>
      <li> <%= trip.rating%></li>
  </ul>
  <% end %>

  <%= link_to "Edit", edit_driver_path(@driver.id) %>
  <div></div>
  <%= link_to "Delete #{@driver.name}", driver_path(@driver.id), method: :delete, data: { confirm: 'Are you sure? This cannot be undone!'} %>
<% end %>
