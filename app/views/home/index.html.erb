<!DOCTYPE html>
<html>
<head>
  <title>RideshareRails</title>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <!-- Vector Graphics by Vecteezy.com -->
  <!-- Image Map Generated by http://www.image-map.net/ -->
  <%= image_tag("home.svg", :alt => "home", usemap: "#image-map") %>
  <map name="image-map">
    <area target="" alt="Passengers" title="Passengers" href="<%= url_for passengers_path %>" coords="97,272,40" shape="circle">

    <area target="" alt="Add Passenger" title="Add Passenger" href="<%= url_for new_passenger_path %>" coords="351,137,40" shape="circle">

    <area target="" alt="Drivers" title="Drivers" href="<%= url_for drivers_path %>" coords="593,195,35" shape="circle">

    <area target="" alt="Add Driver" title="Add Driver" href="<%= url_for new_driver_path %>" coords="693,242,44" shape="circle">
  </map>


  <area target="" alt="Drivers" title="Drivers" href="<%= url_for drivers_path %>" coords="511,587,95" shape="circle">

  <%= yield %>
</body>
</html>
