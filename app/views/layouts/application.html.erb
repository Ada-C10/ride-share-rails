<!DOCTYPE html>
<html>
  <head>
    <title>RideShareRails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>


    <body>
      <header>
        <h1>RideShareRails</h1>
        <nav class="top-navbar">
          <ul>
            <li>
              <%= link_to "All Drivers", drivers_path %>
            </li>
            <li>
              <%= link_to "New Driver", new_driver_path %>
            </li>
            <li>
              <%= link_to "All Passengers", passengers_path %>
            </li>
            <li>
              <%= link_to "New Passenger", new_passenger_path %>
            </li>
          </ul>
        </nav>
      </header>

      <main>
        <%= yield %>
      </main>

      <footer>
        &copy; 2018, Ada Developers Academy
      </footer>
    </body>
  </html>
