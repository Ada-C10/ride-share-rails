<!DOCTYPE html>
<html>
  <head>
    <title>RideShareRails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <% if params[:controller] == "pages" %>
    <body class="home">
      <%= yield %>
    </body>
  <% else %>
    <body>
      <%= yield %>
    </body>
  <% end %>
</html>
