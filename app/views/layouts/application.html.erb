<!DOCTYPE html>
<html>
  <head>
    <title>RideShareRails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
<nav>
    <section class="dropdown">

      <button class="dropbtn">Drivers</button>
        <section class="dropdown-content">
          <%= link_to "View Drivers", drivers_path %>
          <%= link_to "New Driver", new_driver_path %>
        </section>
    </section>
    <section class="dropdown">
      <button class="dropbtn">Passengers</button>
        <section class="dropdown-content">
          <%= link_to "View Passengers", passengers_path %>
          <%= link_to "New Passenger", new_passenger_path %>
        </section>
    </section>
  </nav>

    <%= yield %>
  </body>
</html>
