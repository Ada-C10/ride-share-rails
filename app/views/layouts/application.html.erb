<!DOCTYPE html>
<html>
  <head>
    <title>RideShareRails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Amatic+SC" rel="stylesheet">
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
<section class="navbackground">
<nav>
  <ul>
    <li>
      <button class="homebtn">
        <span><%= link_to "Spooky Bus", root_path %> </span>
      </button>
    </li>
    <li>
    <section class="dropdown">
      <button class="dropbtn">Drivers</button>
        <section class="dropdown-content">
          <%= link_to "View Drivers", drivers_path %>
          <%= link_to "New Driver", new_driver_path %>
        </section>
    </section>
    </li>
    <li>
    <section class="dropdown">
      <button class="dropbtn">Passengers</button>
        <section class="dropdown-content">
          <%= link_to "View Passengers", passengers_path %>
          <%= link_to "New Passenger", new_passenger_path %>
        </section>
    </section>
  </li>
  </ul>
  </nav>
</section>
  <section class= "list">

    <%= yield %>
  </section>
  </body>
</html>
