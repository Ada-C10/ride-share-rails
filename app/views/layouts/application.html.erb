<!DOCTYPE html>
<html>
<head>
  <title>RideshareRails</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <header>
    <div class="application-header">
      <h1>Rideshare Rails!</h1>
    </div>
    <% unless current_page?(root_path) %>
    <nav>
      <ul>
        <li>
          <div class="dropdown">
          <button class="dropbtn"><%= link_to "Home", root_path %></button>
          </div>
        </li>
        <li>
          <div class="dropdown">
            <button class="dropbtn">Passengers</button>
            <div class="dropdown-content">
              <%= link_to "Passenger List", passengers_path %>
              <%= link_to "Add a Passenger", new_passenger_path %>
            </div>
          </div>
        </li>
        <li>
          <div class="dropdown">
            <button class="dropbtn">Drivers</button>
            <div class="dropdown-content">
              <%= link_to "Driver List", drivers_path %>
              <%= link_to "Add a Driver", new_driver_path %>
            </div>
        </li>
      </ul>
    </nav>
    <% end %>
  </header>

  <div class="flash-message">
    <% flash.each do |key, value| %>
    <div><%= value %></div>
    <% end %>
  </div>

  <main>
    <%= yield %>
  </main>

  <footer>
    <div>Copyright Â© 2018</div>
  </footer>

</body>

</html>
