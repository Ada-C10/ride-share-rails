<% if @drivers.errors.any? %>
  <ul class="errors">
    <% @driver.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

<section class="driver-form">
  <h1> <%= action_name %> </h1>

  <%= form_with model: @passenger, class: "passenger-add" do |f|%>
    <p>Please provide the following information to save passenger details to our database:</p>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :phone_num %>
    <%= f.text_field :phone_num %>

    <%= f.submit button_title, class: "passenger-button" %>
  <% end %>
</section>
