

<% if @passenger.errors.any? %>
  <ul >
    <% @passenger.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>
<%= form_with model: @passenger, class: "passenger-form" do |f|%>

<p class="passform">Please change the following information to update the passenger:>
<%= f.label :name %>
<%= f.text_field :name %>

<%= f.label :phone_num %>
<%= f.text_field :phone_num %>

<%= f.submit button_title, class: "passenger-button" %>
<% end %></p>
