
<% if @passenger.errors.any? %>
  <ul class="errors">
    <% @passenger.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

<div class="container">
  <h1> <%= action_name %> </h1>
  <p>Please provide the following information to save your passenger to our database:</p>
  <%= form_with model: @passenger, class: "passenger-form" do |f|%>

    <%= f.label :name %>
    <%= f.text_field :name%>

    <%= f.label :phone_number %>
    <%= f.text_field :phone_num %>

    <%= f.submit button_title, class: "passenger-button" %>
  <% end %>
</div>
