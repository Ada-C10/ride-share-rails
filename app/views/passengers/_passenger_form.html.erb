<%= form_with model: @passenger, class: 'passenger-form' do |f| %>

  <h3><%= form_title %></h3>
  <p>Please enter the following details:</p>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :phone_number %>
  <%= f.text_field :phone_num %>

  <%= f.submit action_type, class: "passenger-form-submit-button" %>

<% end %>
