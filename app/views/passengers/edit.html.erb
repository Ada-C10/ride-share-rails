<h3> Edit passenger</h3>

<%= form_for @passenger do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <br>
  <%= f.label :phone_num %>
  <%= f.text_field :phone_num %>
  <br>
  <br>
  <%= f.submit %>
<% end %>


<% if @passenger.errors.any? %>
  <ul class="errors">
    <% @passenger.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>
