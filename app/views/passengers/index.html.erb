<div class="container">

  <div class="div1">
    <h3>
      <%= link_to "new passenger", new_passenger_path, class: "new-passenger" %>
    </h3>
  </div>

  <div class="div2">
    <h3>
      <%= link_to "all passengers", all_passengers_path, class: "homepage" %>
    </h3>
  </div>

  <div class="div3">
    <h3>your passengers</h3>
    <ol>
      <% i = 0 %>
      <% @passengers.each do |passenger| %>
      <li>
        <p>
          <%= "#{passenger.name}" %>
          <%= link_to "Details", passenger_path(passenger.id), class: "passenger-link" %> |
          <%= link_to "Edit", edit_passenger_path(passenger.id), class: "edit-link" %> |
          <%= link_to "Delete", passenger_path(passenger.id), method: :delete, data: {confirm: "Are you sure you want to get rid of passenger #{passenger.name}?" } %>
        </p>
      </li>
      <% end %>
    </ol>
  </div>

</div>
