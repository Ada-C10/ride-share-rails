<div class="container">
  <div class="div3">
    <h3>List of Passengers</h3>
    <ol>
      <% i = 0 %>
      <% @passengers.each do |passenger| %>
      <li>
        <p>
          <%= "#{passenger.name}" %>
          <%= link_to "Details", passenger_path(passenger.id), class: "passenger-link" %> |
          <%= link_to "Edit", edit_passenger_path(passenger.id), class: "edit-link" %> |
          <%= link_to "Delete", passenger_path(passenger.id), method: :delete, data: {confirm: "Are you sure you want to get rid of passenger #{passenger.name}?" } %>
        </p>
      </li>
      <% end %>
    </ol>
  </div>

</div>
