<%= link_to "(Home Page)", trips_path %>
<%= link_to "(Add New Passenger)", new_passenger_path %>


<h2>Passenger Page</h2>

<ul>
    <% @passengers.each do |passenger| %>
    <%= link_to "(#{passenger.name})", passenger_path(passenger.id) %>


    <%= link_to "Edit", edit_passenger_path(passenger.id) %>
    <%= link_to "Delete", passenger_path(passenger), method: :delete, data: { confirm: "Are you 1000% sure you want to delete the passenger #{passenger.name}?" } %>
  <p>
  <% end %>
</ul>
