<h2>Passengers</h2>
<% @passengers.each do |passenger| %>
<p>
  <%= passenger.name %> <%= passenger.phone_num %>
  <%= link_to "(View Details)", passenger_path(passenger.id) %>
  <%= link_to "Edit", edit_passenger_path(passenger.id) %>
  <%= link_to "[Delete]", passenger_path(passenger.id), method: :delete, data: { confirm: "Are you sure you want to delete the passenger #{passenger.name}?" } %>
</p>

<%end %>
<%= link_to "(New Passenger)", new_passenger_path %>
