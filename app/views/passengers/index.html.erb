<div class="container" role="main">
<div class="c1">
  <h1><%=link_to "Rideshare", home_path%></h1>
</div>
<div class="c2">
  <div class="dropdown">
    <button class="dropbtn">Drivers</button>
    <div class="dropdown-content">
      <%=link_to "View All", drivers_path%>
      <%=link_to "Add Driver", new_driver_path %>
    </div>
  </div>
  <div class="dropdown">
    <button class="dropbtn">Passengers</button>
    <div class="dropdown-content">
      <%=link_to "View All", passengers_path%>
      <%=link_to "Add Passenger", new_passenger_path%>
    </div>
  </div>
</div>
 <div class="c3">
   <%= link_to "New Passenger", new_passenger_path %>
   <%=link_to "Return", home_path%>
 </div>
 <div class="c4">
   <h2>Passengers</h2>
   <% @passengers.each do |passenger| %>
   <p>
     <%= passenger.name %> <%= passenger.phone_num %>
     <%= link_to "View Details", passenger_path(passenger.id) %>
     <%= link_to "Edit", edit_passenger_path(passenger.id) %>
     <%= link_to "Delete", passenger_path(passenger.id), method: :delete, data: { confirm: "Are you sure you want to delete the passenger #{passenger.name}?" } %>
   </p>

   <%end %>
 </div>
</div>
