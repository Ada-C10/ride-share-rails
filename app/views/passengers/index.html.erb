<div class="wrapper list-pages">

  <h1 class="index-header">Passengers List</h1>

  <div class="table list-pages">

    <div class="row header">
      <div class="cell">Passenger ID</div>
      <div class="cell">Name</div>
      <div class="cell"></div>
      <div class="cell"></div>
    </div>

<% @passengers.each do |passenger| %>
    <div class="row">
      <div class="cell" data-title="ID">
        <%= "#{passenger.id}" %>
      </div>
      <div class="cell" data-title="Name">
        <%= link_to "#{passenger.name}", passenger_trips_path(passenger.id) %>
      </div>
      <div class="cell" data-title="Edit">
        <%= link_to "Edit", edit_passenger_path(passenger.id)%>
      </div>
      <div class="cell" data-title="Delete">
        <%= link_to "Delete", passenger_path(passenger.id), method: :delete, data: {confirm: 'Are you sure you want to delete this passenger?'} %>
      </div>
    </div>
<%end%>

  </div>

</div>
