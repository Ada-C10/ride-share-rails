

<% @passengers = Passenger.all%>
<% ordered_passengers = @passengers.order(:name) %>
<table id="index_table">
    <tr>
      <th>PASSENGER NAME</th>
      <th>PASSENGER ID</th>
      <th>EDIT ACTIONS</th>
    </tr>
    <tbody>
<tr>

<% ordered_passengers.each do |passenger| %>
  <tr>
    <td>
      <%= link_to "#{passenger.name}", passenger_path(passenger.id) %>
    </td>
    <td>
      <%= link_to "#{passenger.id}", passenger_path(passenger.id) %>
    </td>
  
  </tr>
<%end%>

</table>

