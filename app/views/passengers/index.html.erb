<div class="user-page">
  <h2>Passengers List</h2>
  <table class="table", id="user-list">
    <tbody>
      <% @passengers.each do |passenger| %>
      <tr>
        <td>
          <%=  link_to passenger.name, passenger_path(passenger.id), class: 'name-link' %>
        </td>
        <td>
          <ul>
            <li>
              <%= link_to "Edit| ", edit_passenger_path(passenger.id) %>
            </li>
            <li>
              <%= link_to "Delete", passenger_path(passenger.id), method: :delete, data: { confirm: 'Are you sure?' } %>
            </li>
          </ul>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <div class="apple_pagination">
    <%= will_paginate @passengers, :page_links => false %>
  </div>
</div>
