<h2>Passenger Details</h2>


<p>
  <strong>
    <p> Name: <%= @passenger.name %> </p>
    <p> Passenger id: <%= @passenger.id %> </p>
    <p> Phone Number: <%= @passenger.phone_num %> </p>
  </strong>

</p>
  <p>Total Charged: $<%= "%.2f" % ((@passenger.total_spent) / 100) %> </p>
<div class="links">

  <%= link_to "Delete Passenger ", @passenger, method: :delete, data: { confirm: "Are you sure that you want to delete?" } %>
  <%= link_to "Edit Passenger", edit_passenger_path(@passenger.id) %>
  <%= button_to "Request a Trip", passenger_trips_path(@passenger.id) %>

</div>

<div class="wrapper_index">
  <h2>YOUR TRIPS</h2>
  <ol>
    <% @passenger.all_trips.each do |trip| %>
      <%=link_to trip.date, trip_path(trip.id)%>
    </div>
  </li>
  <% end %>
</ol>
