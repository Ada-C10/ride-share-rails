<%= render partial: "layouts/nav" %>

<h1>Passenger show page</h1>
<p>
  <strong>ID:</strong>
  <%= @passenger.id %>
  <br />
  <strong>Passenger:</strong>
  <%= @passenger.name %>
  <br />
  <strong>Phone Number:</strong>
  <%= @passenger.phone_num %>
  <br />
  <strong>Money spent:</strong>
  $<%= @passenger.spent %>
</p>


<!-- # <%= @passenger.trips %> -->
<h2>Trips for this Passenger</h2>
<p>
  <ul>
    <% @passenger.trips.sort.each do |trip| %>
    <li><strong>Trip #: <%=trip.id %></strong></li>
    <li>Date: <%=trip.date %></li>
    <li>Rating: <%=trip.rating %></li>
    <li>Cost: <%=trip.cost %></li>
    <li>Driver id: <%=trip.driver_id %></li>
    <!-- turn into link that links to driver show page.  push in parameter as driver_id-->
    <br/>

    <% end %>
  </ul>
</p>
