<div class="description-container">

  <h2><%= @passenger.name %> | <%= @passenger.id %></h2>
  <p>
    <%= link_to "Edit", edit_passenger_path(@passenger.id), class: "edit-link" %> |
    <%= link_to "Delete", passenger_path(@passenger.id), method: :delete, data: {confirm: "Are you sure you want to get rid of passenger #{@passenger.name}?" } %>
  </p>

  <p class="description-text">Name: <%= @passenger.name %><p/>
    <p>
      Phone Number: <%= @passenger.phone_num %>
    </p>
    <p>
      Total Amount Charged: $<%= @passenger.total_cost %>
    </p>
    <p>
      Trips:
      <% @passenger.list_trips.each do |trip| %>
      Trip_ID: <%= trip.id %> <br />
      Date: <%= trip.date %> <br />
      Driver_ID: <%= trip.driver_id %> <br />
      Passenger_ID: <%= trip.passenger_id %> <br/>
      Rating: <%= trip.rating %> <br/>
      Cost: $<%= (trip.cost/100.to_f) %>
      <% end %>
    </br/>
  </br/>
</p>
</div>
<div class="return-home">
  <h3>
    <%= link_to "Return Home", all_passengers_path, class: "homepage" %>
  </h3>
</div>
