<% if @passenger.nil? %>
<h1> 404 Not found</h1>
<% else %>
<h1><%= @passenger.name %></h1>
<p><%= @passenger.phone_num %> </p>
<p><% x = 0 %></p>
  Passenger ID : <%= @passenger.id %>
<p><% @passenger.trips.each do |trip|%>
  <%= link_to "Trip Details", trip_path(trip.id)%>
  Trip ID: <%= trip[:id] %> Trip Date: <%= trip[:date] %> Trip Rating: <%= trip[:rating]  %> Trip Cost: <%= trip.currency %>
  <p> <% x += trip[:cost]  %></p>
  <% end %>
  <p>Total Spent on Rides: $<%= x/100.0 %></p>

 <h4><%= link_to "Add a New Trip", passenger_trips_path(@passenger.id), method: :post%> </h4>
  <h4><%= link_to "Edit Passenger #{@passenger.name}", edit_passenger_path(@passenger.id)%></h4>
  <h4><%= link_to "Delete", remove_passenger_path(@passenger.id), method: :patch, data: { confirm: "Please confirm that you want to delete this passenger." } %></h4>

  <% end %>
