<% if @passenger.nil? %>
<h1> 404 Not found</h1>
<% else %>
<h3><%= @passenger.name %></h3>
<h3><%= @passenger.phone_num %> </h3>

<h3>Trips: </h3>
<table>
  <th>Trip ID</th>
  <th>Date</th>
  <th>Rating</th>
  <%= "Total Spent on Rides: $#{@passenger.total_spent}" %>
  <% @passenger.trips.each do |trip|%>
  <tr>
    <td><%= link_to trip.id, trip_path(trip.id)%></td>
    <td><%=  trip.date %></td>
    <td><%=  trip.rating %></td>
  </tr>
  <% end %>
</table>
<% end %>

<h3><%= link_to "Edit Passenger #{@passenger.name}:#{@passenger.id}", edit_passenger_path(@passenger.id)%></h3>
 <h3><%= link_to "Add a New Trip", passenger_trips_path(@passenger.id), method: :post%> </h3>
