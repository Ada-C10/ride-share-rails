<h1>Passenger Details</h1>
<% if @passenger.nil? %>
<h1> 404 not found </h1>
<% else %>
<h2><%= @passenger.name%></h2>
<h3><%= @passenger.phone_num%></h3>
<% end %>
<div>
<h2>Total Cost: <%= "🚀"'%.2f' %  (@passenger.total_cost/100) %></h2>
</div>


<section class="ride_request">
<%# link_to ride_request %>
</section>

<section class= "edit_actions">
  <%= link_to "✏️", edit_passenger_path(@passenger.id), id: "change", class: "hover_name1"%>
  <%= link_to "🔥", @passenger, method: :delete, data: {confirm: "You sure about that? Select OK to remove task #{@passenger.name.upcase} ForEVVVeeeR!"}, id: "delete", class: "hover_name1" %>
</section>


<table id="show_table">
<tr>
<th>TRIP ID</th>
<th>DRIVER ID</th>
<th>DATE</th>
<th>RATING</th>
<th>COST</th>
<th>EDIT/DELETE</th>
</tr>
<tbody>
 
  <% if @passenger.trips.empty? %>
    <tr>
      <td><%= "No Trips on Record" %></td>
    </tr>
  <% else %>
    <% @passenger.trips.each do |trip| %>
      <tr>
        <td> <%= trip.id %></td>
        <td> <%= trip.driver_id %></td>
        <td> <%= trip.date %></td>
        <td> <%= trip.rating %></td>
        <td> <%= "🚀"'%.2f' % (trip.cost/100) %></td>
      </tr>
        
    <td>
    <% end %>

  <% end %>
  </tbody>
</table>

