<h2>Passenger Details</h2>


<p>
  <strong>
    <%= @passenger.name %>
    <%= @passenger.id %>
    <%= @passenger.phone_num %>
  </strong>

</p>

<p>
  <%= @passenger.all_trips %>
  <p>Total Charged: $<%= "%.2f" % ((@passenger.total_spent) / 100) %> </p>


</p>


<div class="links">

  <%= link_to "delete ", @passenger, method: :delete, data: { confirm: "Are you really really sure that you want to delete?" } %>
  <%= link_to "Edit Passenger ", edit_passenger_path(@passenger.id) %>
  <%= button_to "Add a Trip ", passenger_trips_path(@passenger.id) %>

</div>

<div class="wrapper_index">
  <h2>YOUR TRIPS</h2>
  <ol>
    <% @passenger.all_trips.each do |trip| %>
      <%=link_to trip.date, trip_path(trip.id)%>
    </div>
  </li>
  <% end %>
</ol>
