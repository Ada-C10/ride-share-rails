<h1>Passenger show page</h1>

<p>Name:
<%= @passenger.name %>
</p>

<p>Phone Number:
<%= @passenger.phone_num %>
</p>

<p>Passenger Cost: $<%= @passenger.trip_sum %>
</p>

  <% trips = @passenger.trips %>
    <% if trips.length != 0 %>
    <% puts trips %>
    <% else %>
  <% end %>

<ul>
  <% trips.each do |trip| %>

    <li> Trip id: <b><%= link_to "#{trip.id}", trip_path(trip.id) %> </b></li>
    <li> Trip date:  <%= trip.date %></li>
    <li> Trip rating: <%= trip.rating %></li>
    <li> Trip cost: $<%= trip.cost/100.00 %></li>
    <li> Trip Driver ID <%= trip.driver_id %></li>
    <li> Trip Passenger ID <%= trip.passenger_id %></li><br>

  <% end %>

</ul>
<p>
<%= link_to "(Request A New Trip)", new_trip_path %>
</p>
<%= link_to "(Edit Passenger Details)", edit_passenger_path %>
<%= link_to "(Delete This Passenger)", passenger_path(@passenger), method: :delete, data: { confirm: "Are you 1000% sure you want to delete the passenger #{@passenger.name}?" } %>
<p>
<h4><%= link_to "(Return to Passenger List)", passengers_path %></h4>
</p>
