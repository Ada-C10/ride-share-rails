<h2 class="my-class"><%= page_title %></h2>

<% if @trip.errors.any? %>
<ul class="errors">
  <% @trip.errors.each do |field, message| %>
  <li>
    <strong><%= field.capitalize %>: </strong><%= message %>
  </li>
  <% end %>
</ul>
<% end %>

<%= form_with model: @trip, class: 'trip-form', data: { remote: false } do |f| %>

<%= f.label :rating %>
  <%= f.number_field :rating, min: 1, max: 5 %>

<%= f.submit %>

<% end %>
