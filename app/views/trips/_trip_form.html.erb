<%= render partial: 'layouts/form_errors',
locals: {
  model: @trip
}



%>

<%= form_with model: @trip, class: 'trip-form' do |f| %>

<h3><%= form_title %></h3>

<%= f.label :date %>
<%= f.text_field :date %>

<%= f.select :passenger_id, Passenger.all.map{ |pass| [pass.name, pass.id] } %>

<%= f.label :driver_id %>
<%= f.text_field :driver_id %>



<%= f.label :rating %>
<%= f.text_field :rating %>


<%= f.label :cost %>
<%= f.text_field :cost %>


<%= f.submit action_type, class: "trip-form-submit-button" %>

<% end %>
