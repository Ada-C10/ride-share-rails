<table>
  <thead>
   <tr>
     <th>ID</th>
     <th>Date</th>
     <th>Driver</th>
     <th>Passenger</th>
     <th>Price</th>
     <th>Rating</th>
     <th>Edit</th>
     <th>Delete</th>
   </tr>
 </thead>
 <tbody>
   <% @trips.each do |trip| %>
      <tr>
        <td>
          <%= link_to trip.id, trip_path(trip.id) %><br>
        </td>
        <td>
          <%= trip.date.to_s %><br>
        </td>
        <td>
          <%= trip.driver_name %><br>
        </td>
        <td>
          <%= trip.passenger_name %><br>
        </td>
        <td>
          <%= (trip.cost).to_f / 100 %><br>
        </td>
        <td>
          <%= trip.rating %><br>
        </td>
        <td>
          <%= link_to "Edit", edit_trip_path(trip.id) %>
        </td>
        <td>
          <%= link_to "Delete", trip_path(trip.id), data: { confirm: "Are you sure you want to delete this trip?", method: :delete} %>
        </td>
      </tr>
     <% end %>
 </tbody>
</table>
