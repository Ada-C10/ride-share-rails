<%= render partial: 'layouts/form_errors',
locals: {
  model: @trip
}
%>

<%= form_with model: @trip, class: 'db-form' do |f| %>

<h2> Edit Trip </h2>

<div class="field-one">
<%= f.label :cost %>
<%= f.text_field :cost %>
</div>

<div class="field-two">
<%= f.label :rating %>
<%= f.select :rating, [*1..5] %>
</div>

<%= f.submit 'Edit Trip', class: "trip-form-submit-button" %>


<% end %>
