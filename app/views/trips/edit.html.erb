<h1>Trips#edit</h1>
<%= form_with model: @trip do |f| %>
      <%= f.label :cost %>
      <%= f.text_field :cost %>

      <%= f.label :date %>
      <%= f.text_field :date %>

      <%= f.label :driver %>
      <%= f.select :driver_id, Driver.all.order(:name).map {|d| [d.name, d.id] } %>


      <%= f.label :rating %>
      <%= f.select :rating, [1, 2, 3, 4, 5] %>

      <%= f.submit 'Save Trip Changes', class: "form-button" %>
    <% end %>
