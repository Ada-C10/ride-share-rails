<div id="form-main">
  <div id="form-div">
    <%= form_with model: @trip, url: trip_path, method: :patch, class:"form" , id:"form1" do |f| %>
    <h1 class="detail-before-buttons index-header"> Edit trip </h1>

    <% if @trip.errors.any? %>
    <ul class="errors">
      <% @trip.errors.each do |col, msg| %>
      <li>
        <strong><%= col.capitalize %></strong> <%= msg %>
      </li>
      <% end %>
    </ul>
    <% end %>

    <br>

      <%= f.label :date, "Date", class: "date"%>
      <%= f.text_field :date, type: :date, max: Date.today, placeholder: @trip.date, required: true, class: "feedback-input", id: "date" %>

      <%= f.label :cost, "Cost $", class: "cost" %>
        <% if @trip.cost == nil %>
          <% cost_placeholder = 'Cost' %>
          <% cost_value = nil %>
        <% else %>
          <% cost_placeholder = @trip.formatted_cost %>
          <% cost_value = @trip.formatted_cost %>
        <% end %>
      <%= f.text_field :cost, value: cost_value, placeholder: cost_placeholder, required: true, pattern: '\d{1,3}\.\d{2}', class: "feedback-input", id: "cost_image" %>

      <%= f.label :trip_rating, "Rating", class: "rating" %>
      <%= f.select :trip_rating, [["1"], ["2"], ["3"], ["4"], ["5"]], selected: @trip.rating, prompt: 'Select Rating to End Trip', required: true, class: "feedback-input", id: "rating_image" %>
      <div class="submit">
        <%= f.submit "Save Changes",id: "button-orange" %>
        <div class="ease"></div>
      </div>
      <% end %>
    </div>
  </div>
