<h1> Edit Trip </h1>

<%= form_with model: @trip, class: "trip-form" do |f|%>

  <%= f.label :id %>
  <%= f.text_field :id %>

  <%= f.label :date %>
  <%= f.text_field :date %>

  <%= f.label :passenger_id %>
  <%= f.text_field :passenger_id %>

  <%= f.label :driver_id %>
  <%= f.text_field :driver_id %>

  <%= f.label :cost %>
  <%= f.text_field :cost  %>

  <%= f.label :rating %>
  <%= f.text_field :rating %>

  <%= f.submit %>
<% end %>
