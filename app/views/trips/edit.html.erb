<div class="user">
  <header class="user__header">
      <img src="/assets/pax-icon.svg" alt="" />
      <h1 class="user__title"><%= "Edit Trip ##{@trip.id}" %></h1>
  </header>

<section class="form">
  <% if @trip.errors.any? %>
    <ul class="errors">
      <% @trip.errors.each do |column, message| %>
        <li>
          <strong><%= column.capitalize %></strong> <%= message %>
        </li>
      <% end %>
    </ul>
  <% end %>

  <%= form_with model: @trip, class: "form" do |f|%>

    <%= f.label :date %>
    <%= f.text_field :date, placeholder: :date, class: "form__input"%>


    <%= f.label :driver_id %>
    <%= f.text_field :driver_id, placeholder: :driver_id, class: "form__input"%>

    <%= f.label :passenger_id %>
    <%= f.text_field :passenger_id, placeholder: :passenger_id, class: "form__input" %>

    <%= f.label :cost %>
    <%= f.text_field :cost, placeholder: :cost, class: "form__input" %>

    <%= f.label :rating %>
    <%= f.select :rating, ["-", 1, 2, 3, 4, 5], class: "btn" %>

    <%= f.submit "Save", class: "btn" %>
  <% end %>
</section>
</div>
