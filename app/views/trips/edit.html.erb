<section class="form_partial">
  <section class="section header">
    <h1>Edit Trip</h1>
  </section>
  <% if !@trip.cost.nil? %>
    <% formatted_cost = '%.2f' % (@trip.cost / 100) %>
  <% end %>
  <section class="section fill_out">
    <%= form_with model: @trip do |f|%>
      <%= f.label :date %>
      <%= f.text_field :date %>
      <br />
      <%= f.label :passenger_id %>
      <%= f.text_field :passenger_id %>
      <br />
      <%= f.label :driver_id %>
      <%= f.text_field :driver_id %>
      <br />
      <%= f.label :cost %>
      <%= f.text_field :cost, :value => formatted_cost%>
      <br />
      <%= f.label :rating %>
      <%= f.text_field :rating %>
      <br />
      <%= f.submit "Update Trip!"%>
    <% end %>
  </section>
  <section class="section errors">
    <% if @trip.errors.any? %>
      <h4>Error Message(s):</h4>
      <ul>
        <% @trip.errors.each do |column, message| %>
          <li>
            <strong><%= "#{column.capitalize}: " %></strong> <%= message.capitalize %>
          </li>
        <% end %>
      </ul>
    <% end %>
  </section>
</section>
