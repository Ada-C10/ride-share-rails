<%= form_with model: @trip, url: trip_path, method: :patch do |f| %>
  Edit trip
  <%= f.label :date, "Date" %>
  <%= f.text_field :date, type: :date, max: Date.today, placeholder: @trip.date, required: true %>

  <%= f.label :cost, "Cost $" %>
  <%= f.text_field :cost, value: @trip.formatted_cost, placeholder: @trip.formatted_cost, pattern: '\d{1,3}.\d{2}', required: true %>

  <%= f.label :trip_rating, "Rating" %>
  <%= f.select :trip_rating, [["1"], ["2"], ["3"], ["4"], ["5"]], selected: @trip.rating, required: true %>

  <%= f.submit "Save Changes" %>

<% end %>
