<!-- id date rating cost driver_id passenger_id  -->
<h1>Trips</h1>
<table>
  <tr>
    <th>Trip</th>
    <th>Date</th>
    <th>Driver</th>
    <th>Passenger</th>
    <th>Price</th>
    <th>Rating</th>
  </tr>
  <% @trips.each do |trip| %>
    <tr>
      <td><%= link_to "#{trip.id}", trip_path(trip.id) %></td>
      <td><%= "#{trip.date}" %></td>
      <td><%= link_to "#{trip.driver_id}", driver_path(trip.driver_id) %></td>
      <td><%= link_to "#{trip.passenger_id}", passenger_path(trip.passenger_id) %></td>
      <td><%= "$#{trip.convert_money(trip.cost)}" %></td>
      <td><%= "#{trip.rating}" %></td>
    </tr>
  <% end %>
</table>

