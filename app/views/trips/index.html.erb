<h1>Trips</h1>

<h2> <%=@user.name %> Trips </h2>

<h3><%= @user.name %></h3>

<% @trips.each do |t| %>
  <% if t.passenger.id == @user.id %>
    <%= t.driver.name %>
    <%= t.id %>
    <%= t.cost %>
    <%= t.date %>
    <%= link_to "Edit", edit_passenger_path(t.id) %>
    <br />

  <% elsif t.driver.id == @user.id %>
    <%= t.cost %>
    <br>
    <%= t.passenger.name %>
    <br>
    <%= t.rating %>
    <br>
    <%= link_to "Edit", edit_driver_path(t.id) %>
    <br>
    <br>
  <% end %>

<% end %>
