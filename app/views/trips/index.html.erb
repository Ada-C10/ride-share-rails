
<h1> All Trips </h1>

<ul>
  <% @trips.each do |trip| %>
    <li><strong>Trip #<%=trip.id %></strong></li>
    <%=link_to "View Details", trip_path(trip.id) %> |
    <%=link_to "Driver", driver_trips_path(trip.driver_id) %> |
    <%=link_to "Passenger", passenger_trips_path(trip.passenger_id) %> |
    <%= link_to "Edit trip", edit_trip_path(trip) %> |
    <%= link_to "Delete trip", trip_path(trip), method: :delete, data: { confirm: "Are you sure you want to delete this trip?" } %>
    <br> </br>
  <% end %>
</ul>
