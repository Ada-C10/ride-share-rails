<h1>Trip details</h1>

<ul>
    <li>
      <%= @trip.id %>
    </li>
    <li>
      <%= link_to "#{@trip.driver_id}", driver_path(@trip.driver_id) %>
    </li>
    <li>
      <%= link_to "#{@trip.passenger_id}", passenger_path(@trip.passenger_id) %>
    </li>
    <li>
      <%= @trip.date %>
    </li>
    <li>
      <%= @trip.rating%>
    </li>
    <li>
      <%= @trip.cost%>
    </li>
</ul>

<section>
  <%= link_to "Edit", edit_trip_path(@trip.id) %>
  <%= link_to "Delete", passenger_path(@trip.passenger_id), method: :delete, data: { confirm: "Do you want to delete this trip?" } %>
  <%= link_to "Return to passenger", passenger_path(@trip.passenger_id) %>
</section>
