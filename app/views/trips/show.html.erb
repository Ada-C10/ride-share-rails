<h1>Trip Detail</h1>

<h2>Trip #<%= @trip.id %></h2>
<p>
  Driver ID: <%= link_to "#{@trip.driver_id}", driver_path(@trip.driver_id) %>
</p>
<p>
  Passenger ID: <%= link_to "#{@trip.passenger_id}", passenger_path(@trip.passenger_id) %>
</p>
<p>Date: <%= @trip.date %></p>
<p>Cost: <%= @trip.cost %></p>
<p>
  <% if @trip.rating %>
    <%= "Rating: #{@trip.rating}" %>
  <% else %>
    <%= form_with model: @trip, class: "trip-form"  do |f|%>
      <%= f.select :rating, ["-", 1, 2, 3, 4, 5] %>
      <%= f.submit "Save", class: "button" %>
    <% end %>
  <% end %>
</p>

<ul>
  <li><%= link_to "Edit", edit_trip_path(@trip.id) %></li>
  <li><%= link_to "Delete", trip_path(@trip.id), method: :delete,  data: { confirm: 'Are you sure?' } %></li>
</ul>
