<% if @trip.nil? %>
<h1><%= "404: NOT FOUND" %></h1>
<% else %>
<h1> Trip ID: <%= @trip.id %></h1>
<ul>
  <li> Trip Date: <%= @trip.date%></li>
  <li> Driver: <%= @trip.driver.name %> </li>
  <li> Passenger: <%= @trip.passenger.name%></li>
  <li> Cost: <%= @trip.cost/100%></li>
  <li> Rating:<%= @trip.rating%></li>
</ul>
<%end%>

<ul>
<li><%= link_to "Edit", edit_trip_path(@trip.id)%></li>
<li><%= link_to "Delete", trip_path(@trip.id), method: :delete, data: {confirm:"Are you sure you want to delete?"} %></li>
</ul>
