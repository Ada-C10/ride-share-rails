<div class="description-container">

  <h2>Trip #: <%= @trip.id %></h2>

  <p class="description-text">Driver_id: <%= @trip.driver_id %> | Passenger_id: <%= @trip.passenger_id %> | Date: <%= @trip.date %> | Trip Rating: <%= @trip.rating %> out of 5 | Trip Cost: $<%= "%.2f" % ((@trip.cost) / 100.00) %></p>
</div>
<div class="return-home">
  <h3>
    <%= link_to "Return To Passenger", passenger_path(@trip.passenger_id), class: "passengers_page" %>
  </h3>
</div>
