<h1>Trip Details</h1>

  <h2><%="Trip # #{@trip.id}"%></h2>
  <h3><%="This trip cost $ #{@trip.cost}"%></h3>
  <h3> <%= link_to "The driver was: #{Driver.find(@trip.driver_id).name}", driver_path(@trip.driver_id)%></h3>
  <h3> <%= link_to "The passenger was: #{Passenger.find(@trip.passenger_id).name}", passenger_path(@trip.passenger_id)%></h3>
  <h3> <%= "The rating is #{@trip.rating}"%></h3>

  <%= link_to "Edit", edit_trip_path(@trip.id) %>
  <%= link_to "Delete #{@trip.id}", trip_path(@trip.id), method: :delete, data: { confirm: 'Are you sure? This cannot be undone!'} %>
