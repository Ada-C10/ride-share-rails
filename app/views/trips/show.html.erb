<% if @trip.nil? %>
  <h1> 404 Not found</h1>
<% else %>
  <h1><%= @trip.id %></h1>
<%= "Trip date: #{@trip.date}" %>
<%= "Trip driver: #{@trip.driver_id}" %>
<%= "Trip passenger: #{@trip.passenger_id}" %>
<%= "Trip cost: #{@trip.cost/100.0}." %>
<% if @trip.rating == nil? %>
  <%= link_to "Edit Trip: #{@trip.id}", edit_trip_path(@trip.id)%>
  <% else %>
  <%= "Trip rating: #{@trip.rating}" %>
  <% end %>
<div></div>
<% end %>
